<%- include('../includes/row-opening') %>
  <%- include('../includes/nav') %>
  <div class="center col-6 col-s-9">
    <a href="/shots/new">New Shot</a>
    <h2>Latest Shots</h2>
    <% shots.forEach(shot => { %>
      <ul>
        <li><%= shot.date %>: <a href='/shots/<%= shot.id%>'><%= shot.id%></a></li>
        <li>Input: <%= shot.grindsWeight %>, Output: <%= shot.shotsWeight %></li>
        <% if (shot.shotsWeight >= (shot.grindsWeight * 2)) { %>
          <li>[Long shot]</li>
        <% } else { %>
          <li>[Ristretto]</li>
        <% } %>
      </ul>
    <% }) %>
    </ul>
  </div>
  <%- include('../includes/aside-quote') %>
<%- include('../includes/row-close') %>