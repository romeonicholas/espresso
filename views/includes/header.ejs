    <h1><a href="/">Your Best Shots</a></h1>
    <span class="header-links">
        <% if (typeof username !== 'undefined') { %>
            <span>
                <p class="hidden-mobile">[<%= username %>]</p>&nbsp;&nbsp;&nbsp;
                <a class="link hidden-mobile" href="/users/logout">Log Out</a>&nbsp;&nbsp;
                <span class="nav-icon-container">
                    <a href="/users/logout">
