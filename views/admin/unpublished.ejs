<%- include('../includes/row-opening') %>
    <%- include('../includes/nav') %>
      <div class="center col-6 col-s-9">
        <h2>Welcome ADMIN</h2>
        <p>Make admin changes</p>

        <form method="POST">
          <p>Select beans to publish: </p>
          <% unpublishedBeans.forEach(bean => { %>
            <input type="checkbox" name="beans" value="<%= bean._id %>">
            <label for="<%= bean.id %>"><%= bean.brand %> || <%= bean.name %></label><br />
          <% }) %>

          <p>Select machines to publish: </p>
          <% unpublishedMachines.forEach(machine => { %>
            <input type="checkbox" name="machines" value="<%= machine._id %>">
            <label for="<%= machine.id %>"><%= machine.brand %> || <%= machine.name %></label><br />
          <% }) %>

          <p>Select grinders to publish: </p>
          <% unpublishedGrinders.forEach(grinder => { %>
            <input type="checkbox" name="grinders" value="<%= grinder._id %>">
            <label for="<%= grinder.id %>"><%= grinder.brand %> || <%= grinder.name %></label><br />
          <% }) %>
          <br />
          <button formaction="/admin/unpublished/update">Publish Selected Items</button>
          <button formaction="/admin/unpublished/delete">Delete Selected Items</button>
      </form>
      </div>
    <%- include('../includes/aside-quote') %>
<%- include('../includes/row-close') %>