<%- include('../includes/row-opening') %> <%- include('../includes/nav') %>
<div class="center col-center">
  <h2 class="subheader">Search Results</h2>

  <h3>Found the following for "<%= searchTerms %>":</h3>
  <div class="section-underline"></div>
  <br />

  <% if (results.length) { %> <% results.forEach((result) => { %>
  <div>
    <span class="main-text">
      By <%= result.user.username %> on <%= result.date.toLocaleString("en-US",
      { dateStyle: "short" }) %> (<a
        href="/shots/<%= result._id %>"
        class="link"
        >shot details</a
      >)
    </span>
    <br />
    <span class="main-text">
      Setup: <%- result.bean.brand + ' ' + result.bean.name %> / <%-
      result.machine.brand + ' ' + result.machine.name %> / <%-
      result.grinder.brand + ' ' + result.grinder.name %>
    </span>
    <br />
    <span class="main-text"> <strong>Comments: </strong><%- result.comments %> </span>
  </div>
  <br />

  <% }) %>
  <br />
  <% } else { %>
  <p class="main-text">Nothing found</p>
  <% } %>
</div>
<%- include('../includes/aside-quote') %> <%- include('../includes/row-close')
%>
